{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build && bun run backend:compile",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Meet and Eat POS",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "category": "Business",
      "shortDescription": "Lightweight offline desktop POS",
      "longDescription": "Meet & Eat POS is an offline-first desktop point-of-sale app with billing, menu, history, and backup management.",
      "icon": ["icons/icon.ico", "icons/icon.png", "icons/128x128.png", "icons/128x128@2x.png"],
      "identifier": "com.meateat.pos",
      "resources": ["../db/schema.sql", "bin/backend.exe"],
      "windows": {
        "wix": {
          "language": "en-US"
        }
      }
    },
    "windows": [
      {
        "title": "Meet & Eat POS",
        "width": 1200,
        "height": 720,
        "resizable": true
      }
    ],
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:7777; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    }
  }
}
